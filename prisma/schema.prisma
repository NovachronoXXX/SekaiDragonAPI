generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model usuarios {
  id            Int        @id @default(autoincrement())
  discord_id    String     @unique
  username      String?    @unique
  hasdaily      Boolean    @default(false)
  last_daily    DateTime   @updatedAt
  dxp           Int?       @default(0)
  coins         Int?       @default(0)
  inventory     Json?      @db.JsonB @default("[]")

  @@map("users")
}